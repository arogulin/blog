{% extends "index.twig" %}

{% block content %}
    {% for post in posts %}
        <div class="post">
            <h3>{{ post.title }}</h3>
            <div>{{ post.date | date("d.m.Y H:i") }}</div>
            <div>
                {{ post.content | raw | slice(0, 10) }}
            </div>
        </div>
    {% endfor %}
    
    {% include "pagination.twig" %}
        
{% endblock %}